# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Azure OpenAI Vision (for imaging fallback)
AZURE_OPENAI_VISION_DEPLOYMENT=gpt-4-vision

# Application Settings
APP_NAME=TriCare AI
APP_VERSION=1.0.0
DEBUG=True
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# File Upload Settings
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=./uploads

# ML Model Settings
MODEL_PATH=./app/models/weights/mobilenetv2_xray.pth
USE_GPU=False

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Logging
LOG_LEVEL=INFO

# ===================================
# External Doctor API Configuration
# ===================================
# Enable real-time doctor data from NPPES NPI Registry
# NPPES is a FREE public API for US-based healthcare providers
# Set to 'true' to use external API, 'false' for local sample data
USE_EXTERNAL_DOCTOR_API=false

# NPPES API endpoint (no API key required)
DOCTORS_API_BASE_URL=https://npiregistry.cms.hhs.gov/api

